{
  "id": null,
  "title": "adk",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "gauge",
      "title": "Up",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [{ "expr": "up", "refId": "A" }]
    },
    {
      "type": "gauge",
      "title": "CPU Usage",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent" }
      }
    },
    {
      "type": "gauge",
      "title": "Memory Usage",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "100 * (1 - (avg by(instance) (node_memory_MemAvailable_bytes) / avg by(instance) (node_memory_MemTotal_bytes)))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent" }
      }
    },
    {
      "type": "gauge",
      "title": "Disk Usage",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "100 - (node_filesystem_free_bytes / node_filesystem_size_bytes * 100)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent" }
      }
    }
  ]
}
